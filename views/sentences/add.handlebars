<div class="row">
  <div class="col s12">
    <h3 class="center">Add your sentence</h3>
    <form action="/sentences/add" method="POST">
      <div class="input-field">
        <label for="content">Content</label>
        <textarea class="materialize-textarea" name="content" required>{{ content }}</textarea>
      </div>
      <button type="submit" class="waves-effect waves-light btn">Submit</button>
    </form>
  </div>
</div>