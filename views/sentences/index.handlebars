<a href="/sentences/add" class="waves-effect waves-light btn">Add Sentence</a>

<div class="row">
  {{#each sentences}}
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p>{{ content }}</p>
        </div>
        <div class="card-action">
          <a href="/sentences/edit/{{ id }}" class="waves-effect waves-light teal btn">Edit</a>
          <form action="/sentences/{{id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="waves-effect waves-light red white-text btn" value="Delete">
          </form>
        </div>
      </div>
    </div>
  {{else}}
      <p>No sentences</p>
  {{/each}}
</div>