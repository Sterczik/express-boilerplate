{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/prefer-default-export": [
      "none",
      "always"
    ],
    "import/first": [
      "none"
    ],
    "prefer-arrow-callback": [
      0
    ],
    "no-param-reassign": [
      0
    ],
    "func-names": [
      0
    ]
  }
}
