<div class="container">
  <div class="row">
    <div class="col l6 offset-l3 m8 offset-m2 s12">
      <h3 class="center bold-font">Add your sentence</h3>
      <form action="/sentences/add" method="POST">
        <div class="input-field">
          <label for="content">Content</label>
          <textarea class="materialize-textarea" name="content" required>{{ content }}</textarea>
        </div>
        <button type="submit" class="center waves-effect waves-light btn pink darken-1">Submit</button>
      </form>
    </div>
  </div>
</div>